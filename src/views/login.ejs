<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>weconnect - login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="loginStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="login">
    <!-- headers -->
    <%- include("./Authentication_header.ejs") %>

    <!-- Log in form -->
  <div class="container custom-container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login-text">Log in</div>
        <% if(typeof err !== "undefined") { %>
          <p class="error-msg"><%- err %></p>
        <% } %>
        <form action="/login" class="custom-form" method="post">
          <div class="mb-3">
            <label for="email" class="form-label">EMAIL</label>
            <div class="input-group">
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" 
              name="email"
              placeholder="BCITKevin123@weconnect.com">
              <button type="button" class="btn custom-clear-btn" onclick="document.getElementById('email').value = '';"><i class="bi bi-x-circle"></i></button>
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">PASSWORD</label>
            <div class="input-group">
              <input type="password" class="form-control" id="password" 
              name="password"
              placeholder="*******">
              <button type="button" class="btn custom-clear-btn" onclick="document.getElementById('password').value = '';"><i class="bi bi-x-circle"></i></button>
            </div>
          </div>
           <!-- Log in button -->
           <% value = "Log in" %>
           <%- include("./footer.ejs") %>
        </form>
      </div>
    </div>
  </div>


  <div class="container mt-4 d-flex justify-content-center">
    <div class="col-md-6 text-center">
      <p class="external-login">Or Login with</p>
      <div class="signup-card">
        <img src="Facebook.svg" alt="signup logo">
        <span>Log in with Facebook</span>
      </div>
      <div class="signup-card">
        <img src="Google.svg" alt="signup logo">
        <span>Log in with Google</span>
      </div>
    </div>
  </div>

  <!-- Sign up -->
  <div class="container mt-4 d-flex justify-content-center">
    <div class="col-md-6 text-center">
      <p class="signup-text">Don't have an account?</p>
      <a href="/signup" id="signup-btn" class="signup-card">
        <img src="logo - signup.svg" alt="signup logo">
        <span>Sign up</span>
      </a>
    </div>
  </div>
</body>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Create a new button element
    const autoLoginButton = document.createElement('button');
    const autoLoginButton2 = document.createElement('button');
    autoLoginButton.textContent = 'testman';
    autoLoginButton2.textContent = 'jin123';
    autoLoginButton.classList.add('btn', 'btn-primary', 'mt-3');
    autoLoginButton2.classList.add('btn', 'btn-primary', 'mt-3');
    
    // Append the button to the form
    const form = document.querySelector('.custom-form');
    form.appendChild(autoLoginButton);
    form.appendChild(autoLoginButton2);

    // Add event listener to the button
    autoLoginButton.addEventListener('click', () => {
      document.getElementById('email').value = 'test@test.com';
      document.getElementById('password').value = 'test';
      form.submit();
    });
    
    autoLoginButton2.addEventListener('click', () => {
      document.getElementById('email').value = 'jin123@weconnect.com';
      document.getElementById('password').value = 'jin123';
    });
  });
</script>
</html>
