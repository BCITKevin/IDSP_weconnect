<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>weconnect - homepage</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body style="margin: 16px;" class="settings">
    <header class="homepage-header">
        <%- include("./settings_header.ejs") %>
    </header>

    <div class="container custom-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="settings-text exclude-invert">Settings</div>
                <div>
                    <h5>Account Settings</h5>
                </div>
                <div class="settings-group">
                    <div>
                        <button onclick="showAccountSettings()">Account</button>
                    </div>
                    <div>
                        <button onclick="resetPassword()">Reset Password</button>
                    </div>
                </div>
                <div>
                    <h5>General Settings</h5>
                </div>
                <div class="settings-group">
                    <button>
                    <label class="toggle">
                        Show Notifications
                        <input type="checkbox" id="notificationsToggle" class="toggle-input exclude-invert" onchange="toggleNotifications()" checked>
                        <span class="toggle-slider">
                            <span class="toggle-ball"></span>
                        </span>
                    </label></button>
                </div>
                
                <div class="settings-group">
                    <button>
                    <label class="toggle">
                        Light/Dark Mode
                        <input type="checkbox" id="modeToggle" class="toggle-input" onchange="toggleLightDarkMode()">
                        <span class="toggle-slider">
                            <span class="toggle-ball"></span>
                        </span>
                    </label>
                </button>
                </div>
                
                <div class="settings-group">
                    <button>
                    <label class="toggle">
                        Allow Location
                        <input type="checkbox" id="locationToggle" class="toggle-input" onchange="toggleLocation()" checked>
                        <span class="toggle-slider">
                            <span class="toggle-ball"></span>
                        </span>
                    </label></button>
                </div>
                
                <div class="settings-group">
                    <div>
                        <button onclick="selectLanguage()">Language</button>
                    </div>
                    <div>
                        <h5>Other</h5>
                    </div>
                    <div>
                        <button onclick="showAboutUs()">About Us</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
            <%- include("./homepage_footer.ejs") %>
        </footer>
    <script>
        function toggleLightDarkMode() {
            var body = document.body;
            body.classList.toggle("dark-mode");
        }

        function showAccountSettings() {
            window.location.href = 'accountSettings';
        }

        function resetPassword() {
            window.location.href = 'resetPassword';
        }
    </script>

   
</body>
</html>
