<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>weconnect - signup</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="login">
    <!-- headers -->
  <%- include("./Authentication_header.ejs") %>

    <!-- Sign up form -->
  <div class="container custom-container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login-text">Sign up</div>
        <% if (typeof err !== "undefined") { %>
          <p class="error-msg"><%- err %></p>
        <% } %>
        <form action="/signup" class="custom-form" method="post">
          <div class="mb-3">
            <label for="username" class="form-label">USERNAME</label>
            <div class="input-group">
              <input type="text" class="form-control" id="username" aria-describedby="emailHelp"
              name="username"
              placeholder="BCITKevin123">
              <button type="button" class="btn custom-clear-btn" onclick="document.getElementById('username').value = '';"><i class="bi bi-x-circle"></i></button>
            </div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">EMAIL</label>
            <div class="input-group">
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" 
              name="email"
              placeholder="BCITKevin123@weconnect.com">
              <button type="button" class="btn custom-clear-btn" onclick="document.getElementById('email').value = '';"><i class="bi bi-x-circle"></i></button>
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">PASSWORD</label>
            <div class="input-group">
              <input type="password" class="form-control" id="password" 
              name="password"
              placeholder="*******">
              <button type="button" class="btn custom-clear-btn" onclick="document.getElementById('password').value = '';"><i class="bi bi-x-circle"></i></button>
            </div>
          </div>
            <!-- Log in button -->
          <% value = "Sign up and log in" %>
          <%- include("./footer.ejs") %>
        </form>
      </div>
    </div>
  </div>


  <div class="container mt-4 d-flex justify-content-center">
    <div class="col-md-6 text-center">
      <p class="external-login">Or Sign up with</p>
      <div class="signup-card">
        <img src="Facebook.svg" alt="signup logo">
        <span>Log in with Facebook</span>
      </div>
      <div class="signup-card">
        <img src="Google.svg" alt="signup logo">
        <span>Log in with Google</span>
      </div>
    </div>
  </div>

  <div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="termsCheckbox">
                <label class="form-check-label" for="termsCheckbox">
                    By signing up, you agree to our <a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a>
                </label>
            </div>
        </div>
    </div>
  </div>

</body>
</html>